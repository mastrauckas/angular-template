{
    "name": "template",
    "version": "1.0.0",
    "description": "Michael Astrauckas template.",
    "repository": {
        "type": "GIT",
        "url": ""
    },
    "scripts": {
        "build": "npm run build:dev",
        "build:dev": "npm run build:dev:watch",
        "build:dev:watch": "npm run clean && npm run lint && cross-env NODE_ENV=development webpack --progress --profile --color --watch",
        "build:dev:nowatch": "npm run clean && npm run lint && cross-env NODE_ENV=development webpack --progress --profile --color",
        "build:prod": "npm run clean c && npm run lint && cross-env NODE_ENV=production webpack --progress --profile --color",
        "dev-server": "npm run lint && cross-env NODE_ENV=development webpack-dev-server --inline --progress --port 3000",
        "lint": "tslint --type-check --project tsconfig.json",
        "test": "karma start config/karma.conf.js",
        "clean": "rimraf ./build"
    },
    "dependencies": {
        "@angular/common": "^4.0.2",
        "@angular/compiler": "^4.0.2",
        "@angular/core": "^4.0.2",
        "@angular/forms": "^4.0.2",
        "@angular/http": "^4.0.2",
        "@angular/platform-browser": "^4.0.2",
        "@angular/platform-browser-dynamic": "^4.0.2",
        "@angular/router": "^4.0.2",
        "core-js": "^2.4.1",
        "rxjs": "^5.0.1",
        "zone.js": "^0.8.4"
    },
    "devDependencies": {
        "@types/jasmine": "^2.5.38",
        "@types/node": "^7.0.31",
        "angular2-template-loader": "^0.6.2",
        "chalk": "^1.1.3",
        "codelyzer": "~3.0.1",
        "copy-webpack-plugin": "^4.0.1",
        "cross-env": "^5.0.1",
        "css-loader": "^0.28.4",
        "extract-text-webpack-plugin": "^2.0.0-beta.5",
        "file-loader": "^0.11.2",
        "html-loader": "^0.4.3",
        "html-webpack-plugin": "^2.26.0",
        "jasmine-core": "^2.4.1",
        "karma": "^1.4.0",
        "karma-chrome-launcher": "^2.0.0",
        "karma-jasmine": "^1.0.2",
        "karma-phantomjs-launcher": "^1.0.2",
        "karma-sourcemap-loader": "^0.3.7",
        "karma-webpack": "^2.0.1",
        "node-sass": "^4.5.3",
        "null-loader": "^0.1.1",
        "phantomjs-prebuilt": "^2.1.7",
        "progress-bar-webpack-plugin": "^1.9.3",
        "raw-loader": "^0.5.1",
        "reflect-metadata": "^0.1.8",
        "rimraf": "^2.5.2",
        "sass-loader": "^6.0.6",
